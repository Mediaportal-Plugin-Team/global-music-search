<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>30885</id>
  <defaultcontrol>2</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#usePlayFanart:Yes</define>
  <define>#useSelectedFanart:Yes</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>Background.png</texture>
      <posX>-240</posX>
      <posY>0</posY>
      <width>1440</width>
      <height>720</height>
    </control>
    <import>common.music.fanart.xml</import>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
		<control>
      <description>General Overlay</description>
      <id>0</id>
      <type>image</type>
      <posX>0</posX>
      <posY>30</posY>
      <width>960</width>
      <height>720</height>
      <texture>general_overlay.png</texture>
    </control>
    <control>
      <type>group</type>
      <description>group element</description>
      <posX>40</posX>
      <posY>170</posY>
      <width>180</width>
      <height>379</height>
      <layout>StackLayout</layout>
      <control>
        <type>button</type>
        <description>Search Phrase Button</description>
        <id>2</id>
        <onup>17</onup>
        <width>270</width>
        <label>#GlobalSearch.Translation.SearchPhrase.Label</label>
        <onleft>2</onleft>
        <onright>50</onright>
      </control>
      <control>
        <type>button</type>
        <description>Search History</description>
        <id>7</id>
        <width>270</width>
        <label>#GlobalSearch.Translation.SearchHistory.Label</label>
        <onleft>7</onleft>
        <onright>50</onright>
      </control>
      <control>
        <type>button</type>
        <description>Search Fields</description>
        <id>6</id>
        <width>270</width>
        <label>#GlobalSearch.Translation.SearchFields.Label</label>
        <onleft>6</onleft>
        <onright>50</onright>
      </control>
      <control>
        <type>button</type>
        <description>Search Type</description>
        <id>10</id>
        <width>270</width>
        <label>#GlobalSearch.Translation.SearchType.Label</label>
        <onleft>10</onleft>
        <onright>50</onright>
      </control>
      <control>
        <type>checkbutton</type>
        <description>Case Sensitivity</description>
        <id>3</id>
        <width>270</width>
        <label>#GlobalSearch.Translation.CaseSensitive.Label</label>
        <onleft>3</onleft>
        <onright>50</onright>
        <ondown>2</ondown>
      </control>
    </control>
    <control>
      <description>group element</description>
      <type>group</type>
      <visible>!Control.HasFocus(50)</visible>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control style="NoShadow">
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
					<posX>330</posX>
          <onleft>2</onleft>
          <onright>2</onright>
          <scrollOffset>2</scrollOffset>
          <unfocusedAlpha>160</unfocusedAlpha>
        </control>
      </control>
    </control>
    <control>
      <type>image</type>
      <description>album art image</description>
      <id>0</id>
      <posX>40</posX>
      <posY>390</posY>
      <width>200</width>
      <height>200</height>
      <zoom>yes</zoom>
      <texture>#selectedthumb</texture>
      <keepaspectratio>yes</keepaspectratio>
      <centered>yes</centered>
      <visible>!player.hasmedia</visible>
    </control>
  </controls>
</window>